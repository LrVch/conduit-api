{
  "name": "conduit-api",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/cors": "^2.8.4",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "0.0.42",
    "@types/express-session": "^1.15.12",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.6",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/method-override": "0.0.31",
    "@types/mongodb": "^3.1.23",
    "@types/mongoose": "^5.3.26",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/morgan": "^1.7.35",
    "@types/nconf": "^0.10.0",
    "@types/node": "^11.9.3",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.7",
    "commitlint": "^7.5.2",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "newman": "^4.4.1",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "scripts": {
    "lint": "tslint -p tslint.json",
    "test": "NODE_ENV=test jest",
    "test:node": "NODE_ENV=test npm-run-all --sequential format:write lint test",
    "test:node:one": "NODE_ENV=test jest --watch",
    "test:node:watch": "NODE_ENV=test npm run lint && jest --watch",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "prod": "NODE_ENV=production SECRET=secret MONGODB_URI=mongodb://localhost:27017/conduit-prod  nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc -p .",
    "format:write": "prettier --write ./src/**/*.{ts,json,md}",
    "postinstall": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,md}": [
      "prettier --write",
      "tslint -c tslint.json",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "11.6.0",
    "npm": "6.5.0"
  },
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "http-errors": "^1.7.2",
    "install": "^0.12.2",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "mongoose": "^5.4.14",
    "mongoose-unique-validator": "^2.0.2",
    "morgan": "^1.9.1",
    "nconf": "^0.10.0",
    "npm": "^6.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "request": "^2.88.0",
    "slug": "^1.1.0",
    "underscore": "^1.9.1"
  }
}
