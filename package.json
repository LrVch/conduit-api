{
  "name": "conduit-api",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.3",
    "@types/supertest": "^2.0.7",
    "commitlint": "^7.5.2",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "scripts": {
    "lint": "tslint -p tslint.json",
    "test": "NODE_ENV=test jest",
    "test:node": "NODE_ENV=test npm-run-all --sequential format:write lint test",
    "test:node:one": "NODE_ENV=test jest --watch",
    "test:node:watch": "NODE_ENV=test npm run lint && jest --watch",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "prod": "NODE_ENV=production SECRET=secret MONGODB_URI=mongodb://localhost:27017/conduit  nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc -p .",
    "format:write": "prettier --write ./src/**/*.{ts,json,md}",
    "postinstall": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,md}": [
      "prettier --write",
      "tslint -c tslint.json",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "11.6.0",
    "npm": "6.5.0"
  },
  "dependencies": {
    "@types/mongoose": "^5.3.19",
    "@types/nconf": "^0.10.0",
    "express": "^4.16.4",
    "mongoose": "^5.4.14",
    "nconf": "^0.10.0"
  }
}
